{
  "name": "webcom-server",
  "version": "0.0.1",
  "description": "Webcom's backend.",
  "main": "index.js",
  "author": "Dylan Slack <dylanslack@gmail.com> (http://www.dylanslack.me)",
  "engines": {
    "node": "6.0.0"
  },
  "scripts": {
    "build": "rimraf build && mkdirp build && babel src --out-dir build --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "cover": "better-npm-run cover",
    "heroku:dev": "heroku local -f Procfile.dev",
    "start": "npm run build && node build",
    "start:dev": "nodemon build",
    "test": "npm run test:lint && npm run test:src",
    "test:lint": "eslint src test",
    "test:src": "better-npm-run test:src",
    "test:watch": "ava --watch"
  },
  "betterScripts": {
    "test:src": {
      "command": "nyc ava && nyc report --reporter=lcov"
    },
    "cover": {
      "command": "rimraf coverage .nyc_output && nyc ava && nyc report --reporter=html && open -a \"Google Chrome\" coverage/index.html"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endfire/webcom-server.git"
  },
  "bugs": {
    "url": "https://github.com/endfire/webcom-server/issues"
  },
  "homepage": "https://github.com/endfire/webcom-server#readme",
  "dependencies": {
    "algoliasearch": "^3.15.0",
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "better-npm-run": "0.0.8",
    "jsonwebtoken": "^7.0.0",
    "koa": "^2.0.0",
    "koa-compose": "^3.1.0",
    "koa-router": "^7.0.1",
    "mkdirp": "^0.5.1",
    "rethinkdb": "^2.3.2",
    "rimraf": "^2.5.2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-eslint": "^6.0.4",
    "eslint": "^2.12.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.4.2",
    "eslint-plugin-react": "^5.1.1",
    "nyc": "^6.4.4"
  },
  "ava": {
    "files": [
      "test"
    ],
    "source": [
      "src/**/*.{js}",
      "!build/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
